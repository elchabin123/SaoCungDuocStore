@model List<Product>

<div class="container">
    <div class="row pt-4" pb-3>
        <div class="col-6">
            <h2>Danh Sách Thể Loại</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">(icon dấu Cộng) Tạo Mới </a>
    </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>   
    <tr>
        <th>
                Tựa Đề
        </th>
        <th>
              Mã Tiêu Chuẩn Quốc Tế
        </th>
        <th>
                Tác Giả
        </th>
        <th>
              Giá Niêm Yết
        </th>
         <th>
              Thể Loại
        </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>@obj.Title</td>
            <td>@obj.ISBN</td>
            <td>@obj.Author</td>
            <td>@obj.ListPrice</td>
            <td>@obj.ISBN</td>
            <td class="w-75 btn-group" role="group" class="btn btn-primary mx-2">
                        <a asp-controller="Product"  asp-action="Edit" asp-route-categoryId="@obj.Id">(icon edit) Edit</a>
            </td>
            <td class="w-75 btn-group" role="group" class="btn btn-primary mx-2">
                        <a asp-controller="Product" asp-action="Delete" asp-route-categoryId="@obj.Id">(icon Delet) Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>