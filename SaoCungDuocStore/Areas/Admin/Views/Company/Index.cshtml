<div class="card shadow-lg border-0 my-4">
    <div class="card-header bg-secondary bg-gradient text-center py-3">
        <h2 class="text-white mb-0">Danh Sách Công Ty</h2>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center pb-3">
            <div></div> <!-- Chừa khoảng trống bên trái -->
            <div>
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Tạo mới Công Ty
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-hover table-striped table-bordered align-middle" style="width: 100%;">
                <thead class="table-dark">
                    <tr>
                        <th>Tên</th>
                        <th>Địa Chỉ</th>
                        <th>Thành Phố</th>
                        <th>Bang</th>
                        <th>Số Điện Thoại</th>
                        <th class="text-center">Thực hiện</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
