@model List<Category>

<div class="card shadow-lg border-0 my-4">
    <div class="card-header bg-secondary bg-gradient text-center py-3">
        <h2 class="text-white mb-0">Danh Sách Thể Loại</h2>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center pb-3">
            <div></div> <!-- Chừa khoảng trống bên trái -->
            <div class="container">
                <div class="row align-items-center pt-4 pb-3">
                    <div class="col-md-6">
                        <h2 class="text-primary"></h2>
                    </div>
                    <div class="col-md-6 text-md-end mt-2 mt-md-0">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Tạo Mới
                        </a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Thể Loại</th>
                                <th>Thứ Tự</th>
                                <th class="text-center">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                            {
                                <tr>
                                    <td>@obj.Name</td>
                                    <td>@obj.DisplayOrder</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@obj.CategoryId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-pencil-square"></i> Sửa
                                            </a>
                                            <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@obj.CategoryId" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

            </div>
